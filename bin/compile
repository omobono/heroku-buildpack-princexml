#!/bin/bash

PRINCE_VERSION="9.0r5"
echo "-----> Installing PrinceXML $PRINCE_VERSION"
[ -d .downloads ] || mkdir .downloads
(cd .downloads; [ -d "prince-$PRINCE_VERSION-linux-amd64-static" ] ||
  curl -s http://www.princexml.com/download/prince-$PRINCE_VERSION-linux-amd64.tar.gz | tar xzf -)

if [ -f $3/PRINCE_LICENSE ]; then
  echo "       Configuring license file"
  cp $3/PRINCE_LICENSE ./.downloads/prince-$PRINCE_VERSION-linux-amd64/lib/prince/license/license.dat
else
  echo "       No license found"
fi

echo $1 | ./.downloads/prince-$PRINCE_VERSION-linux-amd64/install.sh
cat >$1/bin/prince <<EOF
#!/bin/sh
exec /app/lib/prince/bin/prince --prefix="/app/lib/prince" "\$@"
EOF